<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Horseshoe.NET.Jwt</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Horseshoe.NET.Jwt</AssemblyName>
    <Version>3.0.0</Version>
    <Authors>Carl Thomas</Authors>
    <Company>Route 595</Company>
    <Description>A set of common methods and classes for generating and handling JWTs and a subset of basic OAuth operations.</Description>
    <Copyright>Copyright Â© 2020-2023 Route 595</Copyright>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>assembly-signing-key.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="7.0.2" />
  </ItemGroup>

